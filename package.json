{
  "name": "@electron-foundation/source",
  "version": "0.0.0",
  "description": "Angulectron desktop foundation workspace.",
  "author": "Simon Hagger",
  "license": "MIT",
  "main": "dist/apps/desktop-main/main.js",
  "scripts": {
    "prepare": "husky",
    "format": "cross-env NX_DAEMON=false TMPDIR=/tmp TMP=/tmp TEMP=/tmp pnpm nx format:write",
    "format:check": "cross-env NX_DAEMON=false TMPDIR=/tmp TMP=/tmp TEMP=/tmp pnpm nx format:check",
    "lint": "cross-env NX_DAEMON=false TMPDIR=/tmp TMP=/tmp TEMP=/tmp pnpm nx run-many -t lint --all",
    "typecheck": "cross-env NX_DAEMON=false TMPDIR=/tmp TMP=/tmp TEMP=/tmp pnpm nx run-many -t build --all --exclude=renderer-e2e",
    "unit-test": "cross-env NX_DAEMON=false TMPDIR=/tmp TMP=/tmp TEMP=/tmp pnpm nx run-many -t test --all --exclude=renderer-e2e",
    "integration-test": "cross-env NX_DAEMON=false TMPDIR=/tmp TMP=/tmp TEMP=/tmp pnpm nx run-many -t test --projects=contracts,desktop-api,core,repository,shell,common",
    "e2e-smoke": "cross-env NX_DAEMON=false TMPDIR=/tmp TMP=/tmp TEMP=/tmp pnpm nx e2e renderer-e2e",
    "a11y-e2e": "cross-env NX_DAEMON=false TMPDIR=/tmp TMP=/tmp TEMP=/tmp pnpm nx e2e renderer-e2e --grep @a11y",
    "i18n-check": "cross-env TMPDIR=/tmp TMP=/tmp TEMP=/tmp tsx tools/scripts/check-i18n.ts",
    "build-renderer": "cross-env NX_DAEMON=false TMPDIR=/tmp TMP=/tmp TEMP=/tmp pnpm nx build renderer",
    "build-desktop-main": "cross-env NX_DAEMON=false TMPDIR=/tmp TMP=/tmp TEMP=/tmp pnpm nx build desktop-main",
    "build-desktop-preload": "cross-env NX_DAEMON=false TMPDIR=/tmp TMP=/tmp TEMP=/tmp pnpm nx build desktop-preload",
    "build-desktop": "pnpm run build-desktop-main && pnpm run build-desktop-preload",
    "build": "pnpm run build-renderer && pnpm run build-desktop",
    "renderer:serve": "cross-env NX_DAEMON=false TMPDIR=/tmp TMP=/tmp TEMP=/tmp pnpm nx serve renderer",
    "desktop:serve-all": "pnpm nx run desktop-main:serve-all",
    "desktop:integration": "pnpm nx run desktop-main:integration",
    "desktop:dev": "pnpm run build-desktop && (pnpm renderer:serve & pnpm wait-on http://localhost:4200 && cross-env NODE_ENV=development RENDERER_DEV_URL=http://localhost:4200 electron dist/apps/desktop-main/main.js)",
    "desktop:dev:win": "powershell -NoProfile -ExecutionPolicy Bypass -File ./tools/scripts/desktop-dev-win.ps1",
    "workspace:refresh:win": "powershell -NoProfile -ExecutionPolicy Bypass -File ./tools/scripts/workspace-refresh-win.ps1",
    "perf:start": "node ./tools/scripts/perf-start.mjs",
    "perf:ipc": "node ./tools/scripts/perf-ipc.mjs",
    "perf:memory": "node ./tools/scripts/perf-memory.mjs",
    "perf:check": "node ./tools/scripts/perf-check.mjs",
    "security-checklist:gate": "node ./tools/scripts/security-checklist-gate.mjs",
    "forge:start": "pnpm run build-desktop && electron-forge start",
    "forge:make": "pnpm run build && electron-forge make",
    "forge:publish": "electron-forge publish",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "dependency-audit": "pnpm audit --prod",
    "license-compliance": "license-checker --summary",
    "commitlint": "commitlint --edit"
  },
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": "^24.13.0",
    "pnpm": "^10.14.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs,json,md,css,html}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "nx",
      "esbuild",
      "electron",
      "electron-winstaller",
      "@carbon/styles"
    ]
  },
  "devDependencies": {
    "@angular-devkit/core": "~21.1.0",
    "@angular-devkit/schematics": "~21.1.0",
    "@angular/build": "~21.1.0",
    "@angular/cli": "~21.1.0",
    "@angular/compiler-cli": "~21.1.0",
    "@angular/language-service": "~21.1.0",
    "@axe-core/playwright": "^4.11.1",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.11.1",
    "@eslint/js": "^9.8.0",
    "@nx/angular": "^22.4.5",
    "@nx/devkit": "22.4.5",
    "@nx/esbuild": "22.4.5",
    "@nx/eslint": "22.4.5",
    "@nx/eslint-plugin": "22.4.5",
    "@nx/js": "22.4.5",
    "@nx/node": "^22.4.5",
    "@nx/playwright": "22.4.5",
    "@nx/vite": "22.4.5",
    "@nx/vitest": "22.4.5",
    "@nx/web": "22.4.5",
    "@nx/workspace": "22.4.5",
    "@playwright/test": "^1.36.0",
    "@schematics/angular": "~21.1.0",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "20.19.9",
    "@typescript-eslint/utils": "^8.40.0",
    "@vitest/coverage-v8": "^4.0.0",
    "angular-eslint": "^21.0.1",
    "autoprefixer": "^10.4.0",
    "cross-env": "^10.1.0",
    "electron": "^40.2.1",
    "esbuild": "^0.19.2",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-playwright": "^1.6.2",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "jsonc-eslint-parser": "^2.1.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^16.2.7",
    "ng-packagr": "~21.1.0",
    "nx": "22.4.5",
    "postcss": "^8.4.5",
    "postcss-url": "~10.1.3",
    "prettier": "~3.6.2",
    "tailwindcss": "^4.1.18",
    "tslib": "^2.3.0",
    "tsx": "^4.21.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.0.0",
    "vitest": "^4.0.8",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@angular/animations": "^21.1.3",
    "@angular/cdk": "^21.1.3",
    "@angular/common": "~21.1.0",
    "@angular/compiler": "~21.1.0",
    "@angular/core": "~21.1.0",
    "@angular/forms": "~21.1.0",
    "@angular/material": "^21.1.3",
    "@angular/platform-browser": "~21.1.0",
    "@angular/router": "~21.1.0",
    "@carbon/styles": "^1.99.0",
    "@fontsource/ibm-plex-mono": "^5.2.7",
    "@fontsource/ibm-plex-sans": "^5.2.8",
    "@fontsource/material-icons": "^5.2.7",
    "@jsverse/transloco": "^8.2.1",
    "electron-updater": "^6.7.3",
    "rxjs": "~7.8.0",
    "zod": "^4.3.6"
  }
}
